  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es2024",
    "verbatimModuleSyntax": true
